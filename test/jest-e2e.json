{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@libs/logger(|/.*)$": "<rootDir>/../libs/logger/src/$1",
    "^@libs/modules(|/.*)$": "<rootDir>/../libs/modules/src/$1",
    "^@libs/utils(|/.*)$": "<rootDir>/../libs/utils/src/$1"
  }
}